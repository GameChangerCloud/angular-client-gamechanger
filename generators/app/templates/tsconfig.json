{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,    
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es6",
    "esModuleInterop": true,
    "module": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2019",
      "dom"
    ],
    "paths": {
      "tslib" : ["path/to/node_modules/tslib/tslib.d.ts"],
      "@app/*": ["app/*"],
      "@data/*": ["app/data/*"],
      "@shared/*": ["app/shared/*"],
      "@screen/*": ["app/screen/*"],
      "@assets/*": ["assets/*"],
      "@core/*": ["app/core/*"],
      "@store/*": ["app/store/*"],
    },
  },
  "exclude": ["app/**/*.ngtypecheck.ts"]
}
