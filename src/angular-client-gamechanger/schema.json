{
  "$schema": "http://json-schema.org/schema",
  "$id": "0",
  "title": "ng new options schema",
  "type": "object",
  "description": "Generates a new basic application setup with ngrx store for your graphQL schema ",
  "properties": {
    "name": {
      "description": "Name of the new app.",
      "type": "string",
      "pattern": "^(?:@[a-zA-Z0-9-*~][a-zA-Z0-9-*._~]*/)?[a-zA-Z0-9-~][a-zA-Z0-9-._~]*$",
      "default": "default-app",
      "x-prompt": "What name would you like to use for the application?"
    },
    "description": {
      "type": "string",
      "description": "Description of the project",
      "x-prompt": "Describe your app"
    },
    "gqlPath": {
      "type": "string",
      "description": "Path of the graphQl schema",
      "minLength": 1,
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Please fill the path to your graphQL schema ",
    },
    "endpoint_uri": {
      "type": "string",
      "description": "API to consume",
      "minLength": 1,
      "x-prompt": "Please fill endpoint Uri to consume",
      "default":"<endpoint_uri>"
    },
    "cognitoUserPoolId": {
      "type": "string",
      "description": "Cognito user poolBase ID",
      "minLength": 1,
      "x-prompt": "Please fill your userpool base ID ",
      "default":"<cognitoUserPoolId>"
    },
    "cognitoClientId": {
      "type": "string",
      "description": "Cogito client Id",
      "minLength": 1,
      "x-prompt": "Please fill your cognito client Id : ",
      "default":"<cognitoClientId>"
    } 
  },
  "required": ["name","gqlPath"]
 }